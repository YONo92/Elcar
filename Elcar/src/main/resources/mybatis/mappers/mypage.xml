<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elcar.mypage.MypageDAO">


	<!-- 아이디로 회원 조회 -->
	<select id="queryMember" resultType="Member" parameterType="String">
      <![CDATA[
         select * from member where id = #{id}
      ]]>
	</select>
	
	<!-- 이용내역 조회 -->
	<select id="historyMember" resultType="Member" parameterType="String">
      <![CDATA[
         select * from history where member_id = #{member_id}
      ]]>
	</select>
	
	<!-- 나의 정보 수정 -->
	<update id="updateMember" parameterType="member">
      <![CDATA[
      update member set name=#{name}, email=#{email}, nickname=#{nickname}, phone=#{phone}
      where id=#{id}
      ]]>
   </update>
   
	<!-- 비밀번호 변경 -->
	<update id="updatePw" parameterType="Map">
      <![CDATA[
      update member set pw=#{pw} where id=#{id}
      ]]>
	</update>
	
	<!-- 회원탈퇴 -->
	<delete id="deleteId" parameterType="String"> 
	<![CDATA[ 
		delete from member WHERE id = #{id}
	]]>
	</delete>
	
	<!-- 매너 점수 조회 -->
	<select id="queryPoint" resultType="Member" parameterType="String">
      <![CDATA[
         select point from member where member_id = #{member_id}
      ]]>
	</select>
	
	
	
    <!--  -->    <!--  -->    <!--  -->    <!--  -->    <!--  -->    <!--  -->    <!--  -->    <!--  -->    <!--  -->    <!--  -->
	<!-- 매너 점수 변동 -->
	<update id="updatePoint" parameterType="Map">
		<![CDATA[ 
		update member set member_point = #{member_point} where sincheng_id=#{sincheng_id} and surak_id=#{surak_id}
	]]>
	</update>
	
	
	
		<!-- 탈게 매너 점수 변동 -->
	<update id="updateTalgaePoint" parameterType="Map">
		<![CDATA[ 
		update member set member_point = #{member_point} where surak_id=#{surak_id}
	]]>
	</update>
	
